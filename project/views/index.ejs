<html>
    <body>
    <H2>Welcome,(<%= userName %>)</H2>
    
        <% if ( Restaurant.length > 0) { %>
            <ul>
            <% for (var r of Restaurant) { %>

            <li>Restaurant ID: <%= r.id %>   <a href="/edit?r_id=<%= r._id %>" >edit</a>

                <% if ( r.owner == userName) { %>
                    <a href="/details?r_id=<%= r._id %>" >detail</a>
                <% } %>

                <a href="/rate?r_id=<%= r._id %>" >rate</a>
            
            </li>

            <% } %>
        </ul>
            
            <% } else { %>
            <h1>Nothing to Show!</h1><br>
            <h1>Create your own document</h1><br>

            <% } %>
        <a href="/create?username=<%=userName%>"> <button>Create</button></a>
        <a href="/logout"> <button>Logout</button></a>
    </body>
</html>
