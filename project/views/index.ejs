<html>
    <body>
    <H2>Welcome,(<%= userName %>)</H2>


    <form action = "/search" method = "POST" >
    Search: <select name="type">
        <option value="name">name</option>
        <option value="cuisine">cuisine</option>
        <option value="borough">borough</option>
      </select>
      <input type="text" name="search" >
    <input type = "submit" value = "Search"></input>
    </form>
    
    
        <% if ( Restaurant.length > 0) { %>
            <ul>
            <% for (var r of Restaurant) { %>

            <li>Restaurant ID: <%= r.id %>   <a href="/details?_id=<%= r._id %>" >details</a>

                <% if ( r.owner == userName) { %>
                    <a href="/edit?_id=<%= r._id %>" >edit</a>
                    <a href="/delete?_id=<%= r._id %>" >delete</a>
                <% } %>

                <a href="/rate?_id=<%= r._id %>" >rate</a>
            
            </li>

            <% } %>
        </ul>
            
            <% } else { %>
            <h1>Nothing to Show!</h1><br>
            <h1>Or you can create your own document</h1><br>

            <% } %>
        <a href="/create?username=<%=userName%>"> <button>Create</button></a>
        <a href="/logout"> <button>Logout</button></a>
    </body>
</html>
